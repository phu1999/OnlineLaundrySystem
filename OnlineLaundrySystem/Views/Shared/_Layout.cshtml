<!DOCTYPE HTML>
<html lang="en">

<head>
    <title>Online Laundry System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>

    @Styles.Render("~/template/css")

    <!--webfonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!--//webfonts-->
</head>

<body>
    <!-- header -->
    <header>
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" href="@Url.Action("Index","Home")">
                    @*<i class="fab fa-empire"></i>*@
                    <img src="~/Content/images/logo.png" alt="logo" title="logo" />
                </a>
                <button class="navbar-toggler ml-md-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto text-center">
                        <li class="nav-item active  mr-3">
                            <a class="nav-link" href="@Url.Action("Index","Home")">
                                HOME
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item  mr-3">
                            <a class="nav-link" href="@Url.Action("AboutUs","Home")">ABOUT US</a>
                        </li>
                        <li class="nav-item  mr-3">
                            <a class="nav-link" href="@Url.Action("ContactUs","Home")">CONTACT US</a>
                        </li>
                        <li class="nav-item  mr-3">
                            <a class="nav-link" href="@Url.Action("Pricing","Home")">PRICING</a>
                        </li>
                        <li class="nav-item  mr-3">
                            <a class="nav-link" href="@Url.Action("OrderOnline","Home")">ORDER ONLINE</a>
                        </li>
                        <li class="nav-item  mr-3">
                            <a class="btn btn-primary px-4" href="@Url.Action("Login","Home")" role="button">LOGIN</a>
                        </li>
                        <li class="nav-item  mr-3">
                            <a class="btn btn-primary px-4" href="@Url.Action("Register","Home")" role="button">REGISTER</a>
                        </li>
                    </ul>
                    

                </div>
            </nav>
        </div>
    </header>
    <!-- //header -->

    @RenderBody()

    <!-- footer -->
<footer class="py-md-5 pt-5 pb-4">
    <div class="container">
        <!-- copyright -->
        <div class="cpy-right text-center pt-5">
            <p>
                © 2020. All rights reserved.
            </p>
        </div>
        <!-- //copyright -->
    </div>
</footer>

    <!-- //footer -->

    @Scripts.Render("~/template/js")
    <!-- Banner text Responsiveslides -->
    <script>
        // You can also use "$(window).load(function() {"
        $(function () {
            // Slideshow 4
            $("#slider3").responsiveSlides({
                auto: true,
                pager: true,
                nav: false,
                speed: 500,
                namespace: "callbacks",
                before: function () {
                    $('.events').append("<li>before event fired.</li>");
                },
                after: function () {
                    $('.events').append("<li>after event fired.</li>");
                }
            });

        });
    </script>
    <!-- //Banner text  Responsiveslides -->
    <!-- start-smooth-scrolling -->
    <script>
        jQuery(document).ready(function ($) {
            $(".scroll ").click(function (event) {
                event.preventDefault();

                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 1000);
            });
        });
    </script>
    <!-- //end-smooth-scrolling -->
    <!-- smooth-scrolling-of-move-up -->
    <script>
        $(document).ready(function () {
            
             var defaults = {
                 containerID: 'toTop', // fading element id
                 containerHoverID: 'toTopHover', // fading element hover id
                 scrollSpeed: 1200,
                 easingType: 'linear'
             };
             

            $().UItoTop({
                easingType: 'easeOutQuart'
            });

        });
    </script>
    <!-- //smooth-scrolling-of-move-up -->
    <!-- gallery swipebox -->
    <script>
        jQuery(function ($) {
            $(".swipebox").swipebox();
        });
    </script>
    <!-- effect -->
    <script>
        $(function () {
            $('.row2').adipoli({
                'startEffect': 'overlay',
                'hoverEffect': 'sliceDown'
            });
        });
    </script>
    <script>
        $(function () {
            $("#datepicker1,#datepicker2").datepicker();
        });
    </script>
    <!-- // Date picker -->
    <!-- testimonials -->
    <script>
        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                items: 1,
                lazyLoad: true,
                autoPlay: false,
                navigation: true,
                navigationText: true,
                pagination: true,
            });
        });
    </script>

</body>

</html>